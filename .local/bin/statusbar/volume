VOLUME=$( pulsemixer --get-volume | cut -d' ' -f1 )

MUTED=$( pulsemixer --get-mute )

if [ $MUTED = 1 ]; then
	ICON="ðŸ”‡"
elif [ "$VOLUME" -gt "70" ]; then
	ICON="ðŸ”Š"
elif [ "$VOLUME" -lt "30" ]; then
	ICON="ðŸ”ˆ"
else
	ICON="ðŸ”‰"
fi

echo "${ICON}${VOLUME}%"
